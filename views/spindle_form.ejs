<h4><%= mode === 'add' ? 'Spindle Ekle' : 'Spindle Düzenle' %></h4>

<div class="card shadow-sm mt-3">
  <div class="card-body">
    <form method="post">
      <div class="mb-3">
        <label class="form-label">Referans ID</label>
        <input type="text" name="Referans ID" class="form-control"
               value="<%= record ? record['Referans ID'] : '' %>" required>
      </div>

      <div class="mb-3">
        <label class="form-label">Çalışma Saati</label>
        <input type="text" name="Çalışma Saati" class="form-control"
               value="<%= record ? record['Çalışma Saati'] : '' %>">
      </div>

      <div class="mb-3">
        <label class="form-label">Takılı Olduğu Makine</label>
        <input type="text" name="Takılı Olduğu Makine" class="form-control"
               value="<%= record ? record['Takılı Olduğu Makine'] : '' %>">
      </div>

      <div class="mb-3">
        <label class="form-label">Makinaya Takıldığı Tarih</label>
        <input type="text" name="Makinaya Takıldığı Tarih" class="form-control"
               placeholder="gg-aa-yyyy"
               value="<%= record ? record['Makinaya Takıldığı Tarih'] : today %>">
      </div>

      <button type="submit" class="btn btn-primary">Kaydet</button>
      <a href="/spindles" class="btn btn-secondary">İptal</a>
    </form>
  </div>
</div>
