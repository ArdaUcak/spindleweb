<!doctype html>
<html lang="tr">
<head>
  <meta charset="utf-8">
  <title><%= appTitle %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-4">
    <div class="container-fluid">
      <a class="navbar-brand" href="/spindles">STS</a>
      <% if (session && session.loggedIn) { %>
      <div>
        <a href="/spindles" class="btn btn-outline-light btn-sm me-2">Spindle</a>
        <a href="/yedeks" class="btn btn-outline-light btn-sm me-2">Yedek</a>
        <a href="/export" class="btn btn-outline-light btn-sm me-2">Excel'e Aktar</a>
        <a href="/logout" class="btn btn-light btn-sm text-primary">Çıkış</a>
      </div>
      <% } %>
    </div>
  </nav>

  <div class="container mb-4">
    <% ['success', 'danger', 'info'].forEach(function(type) { %>
      <% (flash(type) || []).forEach(function(msg) { %>
        <div class="alert alert-<%= type %> alert-dismissible fade show" role="alert">
          <%= msg %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% }); %>
    <% }); %>

    <%- body %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
